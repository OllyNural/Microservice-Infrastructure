{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "Create task definitions to define how to run the build portfolio ",
  "Parameters": {
    "nodepath": {
      "Type": "String"
    }
  },
  "Resources": {
    "PortfolioTask": {
      "Type": "AWS::ECS::TaskDefinition",
      "Properties": {
        "ContainerDefinitions": [
          {
            "Name": "portfolio-task",
            "Image": {
              "Fn::Join": [
                "",
                [
                  { "Fn::ImportValue": "PortfolioECRepositoryARN" },
                  ":latest"
                ]
              ]
            },
            "Memory": "128",
            "PortMappings": [{
                "ContainerPort": "8080",
                "HostPort" : "80"
            }],
            "Environment": [
              {
                "Name": "nodepath",
                "Value": { "Ref": "NODE_PATH" }
              }
            ]
          }
        ]
      }
    }
  },
  "Outputs": {
    "PortfolioTask": {
      "Description": "The Task definition to run the task definition",
      "Export": {
          "Name": "portfolio-task"
      },
      "Value": {
        "Ref": "PortfolioTask"
      }
    }
  }
}