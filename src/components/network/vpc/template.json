{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "Create VPC Network",
  "Parameters": {
    "Name": {
      "Description": "The name tag for this Vpc",
      "Type": "String"
    },
    "CidrBlock": {
      "Ref": "CidrBlock"
    }
  },
  "Resources": {
    "PublicSubnetSecurityGroup": {
      "Type": "AWS::EC2::SecurityGroup",
      "DependsOn": "PortfolioVPC",
      "Properties": {
        "GroupDescription": "Portfolio subnet security group",
        "VpcId": {
          "Ref": "PortfolioVPC"
        },
        "SecurityGroupIngress": [
          {
            "IpProtocol": "tcp",
            "FromPort": "80",
            "ToPort": "80",
            "CidrIp": "0.0.0.0/0"
          }
        ],
        "SecurityGroupEgress": [
          {
            "IpProtocol": "tcp",
            "FromPort": "80",
            "ToPort": "80",
            "CidrIp": "0.0.0.0/0"
          }
        ],
        "Tags": [
          {
            "Key": "Name",
            "Value": "Portfolio subnet security group"
          }
        ]
      }
    },
    "PortfolioVPC": {
      "Type": "AWS::EC2::VPC",
      "Properties": {
        "EnableDnsHostnames": "true",
        "EnableDnsSupport": "true",
        "CidrBlock": { "Ref": "CidrBlock" },
        "Tags": [
          {
            "Key": "Name",
            "Value": {
              "Ref": "Name"
            }
          }
        ]
      }
    }
  },
  "Outputs": {
    "PortfolioVPC": {
      "Description": "ID of the VPC",
      "Export": {
        "Name": "portfolio-vpc"
      },
      "Value": {
        "Ref": "PortfolioVPC"
      }
    },
    "PortfolioSecurityGroup": {
      "Description": "Security Group for Portfolio Subnet",
      "Export": {
        "Name": "portfolio-security-group"
      },
      "Value": {
        "Ref": "PublicSubnetSecurityGroup"
      }
    }
  }
}